#!/usr/bin/env php
<?php

namespace Brain\Even;

$autoloadPath1 = __DIR__ . "/../vendor/autoload.php";
$autoloadPath2 = __DIR__ . "/../../../autoload.php";
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function Brain\Games\Cli\getUserName;
use function Brain\Even\Logic\getAnswers;
use function Brain\Even\Logic\giveResult;

$pName = getUserName();
$plrPass = getAnswers();
giveResult($pName, $plrPass);
